{
	"name": "fictioner",
	"displayName": "Fiction Writing Tool",
	"description": "An integrated tool for writing fiction using Markdown",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:fictioner.enable",
		"workspaceContains:fiction.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fictioner.enable",
				"title": "Fictioner: Enable"
			},
			{
				"command": "fictioner.refresh",
				"title": "Fictioner: Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "fictioner.compile",
				"title": "Fictioner: Compile",
				"icon": "$(zap~spin)"
			},
			{
				"command": "fictioner.itemUp",
				"title": "Fictioner: ItemUp",
				"icon": "$(arrow-up)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "fictionView",
					"name": "FICTION",
					"when": "fictionJsonExists"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "fictioner.refresh",
					"when": "view == fictionView",
					"group": "navigation"
				},
				{
					"command": "fictioner.compile",
					"when": "view == fictionView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fictioner.compile",
					"when": "viewItem == fictionContent",
					"group": "inline"
				},
				{
					"command": "fictioner.itemUp",
					"when": "viewItem == fictionContent",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/markdown-it": "^12.0.0",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"child_process": "^1.0.2",
		"markdown-it": "^12.0.4"
	}
}
