{
	"name": "fictioner",
	"publisher": "YunhoJeon",
	"displayName": "Fiction Writing Tool",
	"description": "vscode extension for writing fiction using Markdown",
	"version": "0.2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/yunhojeon/fictioner"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:fictioner.enable",
		"workspaceContains:fictioner.yml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fictioner.enable",
				"title": "Fictioner: Enable"
			},
			{
				"command": "fictioner.refresh",
				"title": "Fictioner: Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "fictioner.compile",
				"title": "Fictioner: Compile",
				"icon": "$(zap~spin)"
			},
			{
				"command": "fictioner.config",
				"title": "Fictioner: Config",
				"icon": "$(gear)"
			},
			{
				"command": "fictioner.searchtag",
				"title": "Fictioner: Search Tag",
				"icon": "$(search)"
			},
			{
				"command": "fictioner.analytics",
				"title": "Fictioner: Analytics",
				"icon": "$(light-bulb)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "fictionView",
					"name": "FICTIONER",
					"when": "fictionerEnabled"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "fictioner.refresh",
					"when": "view == fictionView",
					"group": "navigation"
				},
				{
					"command": "fictioner.compile",
					"when": "view == fictionView",
					"group": "navigation"
				},
				{
					"command": "fictioner.config",
					"when": "view == fictionView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fictioner.compile",
					"when": "viewItem == fictionContent",
					"group": "inline"
				},
				{
					"command": "fictioner.searchtag",
					"when": "viewItem == hashtag",
					"group": "inline"
				}
			],
			"editor/context": [
				{
				  "command": "fictioner.analytics",
				  "when": "editorLangId == markdown",
				  "group": "fictioner"
				}
			  ],
			  "editor/title": [
				{
				  "command": "fictioner.analytics",
				  "when": "editorLangId == markdown",
				  "group": "navigation"
				}
			  ]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"esbuild": "^0.12.28",
		"eslint": "^7.15.0",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"child_process": "^1.0.2",
		"chokidar": "^3.5.2",
		"glob": "^7.1.6",
		"yaml": "^1.10.2"
	}
}
